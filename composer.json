{
    "name": "magroski/simple-sqs",
    "description": "A simple client to send messages to Amazon SQS",
    "type": "library",
    "keywords": [
        "Queue",
        "AWS",
        "SQS"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Magroski",
            "email": "magroski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SimpleSqs\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "aws/aws-sdk-php": "^3.27"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.0",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.1",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "4.5",
        "squizlabs/php_codesniffer": "*"
    }
}
